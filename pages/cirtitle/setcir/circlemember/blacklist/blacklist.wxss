/* pages/cirtitle/setcir/circlemember/blacklist/blacklist.wxss */

.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.lf {
    float: left;
}

.rg {
    float: right;
}

.page {
    overflow: hidden;
}

.dynamic-empty {
    width: 280rpx;
    height: 280rpx;
    position: absolute;
    left:50%;
    top: 50%;
    margin-left:-140rpx;
    margin-top: -140rpx; 
}

.dynamic-empty .img {
    display: block;
    margin: 0 auto;
}

.dynamic-empty .empty-txt {
    display: inline-block;
    width: 100%;
    padding-top: 0;
    font-size: 30rpx;
    color: #ababab;
    text-align: center;
}

.cont-txt {
    font-size: 26rpx;
    color: #999;
    line-height: 100%;
}

.ml20 {
    margin-left: 20rpx;
}

.mt15 {
    margin-top: 15rpx;
}

.m30 {
    margin-top: 30rpx;
}

.mr20 {
    margin-right: 20rpx;
}

.mange,
.members {
    height: 100rpx;
    background: #fff;
    line-height: 100rpx;
}

.blacklisttxt {
    font-size: 34rpx;
    color: #333;
    line-height: 100rpx;
}

.borderbt {
    border-bottom: 2rpx solid #e6e6e6;
}

.maskLayer {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

.choose {
    width: 710rpx;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 20rpx;
    z-index: 2000;
    /*background: #fff;*/
}

.choosebox {
    width: 100%;
    text-align: center;
    background: #fff;
    border-radius: 8rpx;
}

.chooseimg {
    vertical-align: middle;
    margin-top: 30rpx;
}

.choosename {
    font-size: 28rpx;
    color: #333;
    line-height: 48rpx;
}

.choosedate {
    font-size: 28rpx;
    color: #999;
    height: 36rpx;
}

.choosereomvetxt {
    font-size: 34rpx;
    color: #fb3f35;
    padding: 30rpx 0;
    border-top: 2rpx solid #dee1e8;
}

.cancel {
    font-size: 32rpx;
    background: #fff;
    text-align: center;
    color: #077bfb;
    border-radius: 8rpx;
    margin: 10rpx 0;
}

.txtcolor {
    color: #077bfb;
}