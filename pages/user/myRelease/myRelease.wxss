/* pages/user/myRelease/myRelease.wxss */
.page{
    height:100%;
    position: relative;
}
.bg {
    width: 750rpx;
    height: 350rpx;
    background-size: cover;
    -webkit-filter: blur(15rpx);
    -moz-filter: blur(15rpx);
    -ms-filter: blur(15rpx);
    filter: blur(15rpx);
}

.headImg {
    width: 750rpx;
    height: 350rpx;
    position: absolute;
    top: 80rpx;
    left: 0;
    text-align: center;
}

.name {
    font-size: 30rpx;
    color: #fff;
    font-weight: bold;
    line-height: 60rpx;
}

.dynamic-box {
    padding: 40rpx 20rpx 0;
    border-bottom: 1rpx solid #eee;
}

.dynamic-txtp{
    font-size: 30rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.time {
    margin-top: 20rpx;
}

.timetxt {
    font-size: 28rpx;
    color: #999;
}

.imglist {
    padding-left: 0;
}

.showVideo {
    padding-left: 0;
}

.showVideoImg {
    width: 200rpx;
    height: 200rpx;
    position: relative;
}

.play {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -35rpx;
    margin-top: -35rpx;
}

.audios {
    padding-left: 0;
}

.audios .nineaudio {
    width: 710rpx;
}