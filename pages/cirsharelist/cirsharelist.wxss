/* pages/cirsharelist/cirsharelist.wxss */

.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.lf {
    float: left;
}

.rg {
    float: right;
}

.page {
    /* padding-bottom: 100rpx; */
}

.sure {
    width: 720rpx;
    position: fixed;
    bottom: 0;
    padding: 15rpx;
    background: #fff;
}

.sure .weui-btn {
    background: #c55c47;
    color: #fff;
}

.num {
    text-align: center;
}

.numtxt {
    font-size: 28rpx;
    color: #333;
}

.numcolor {
    color: #F75D25;
}

.ml50 {
    margin-left: 50rpx;
}

.title {
    font-size: 40rpx;
    color: #333;
    text-align: center;
    padding-top: 10rpx;
}

.intro {
    font-size: 30rpx;
    color: #333;
    text-align: center;
    padding-top: 20rpx;
}

.info {
    padding-top: 50rpx;
    position: relative;
}

.head {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    position: absolute;
    top: -45rpx;
    left: 50%;
    margin-left: -45rpx;
}

.namecolor {
    color: #527D95;
}

.article {
    font-size: 36rpx;
    color: #333;
    padding: 0 30rpx;
    margin-top: 0;
    font-weight: bold;
}

.weui-article__p {
    font-size: 24rpx;
    color: #666;
}

.weui-flex-money {
    font-size: 30rpx;
    color: #333;
    line-height: 76rpx;
}

.dynamic-empty {
    padding: 0 0 150rpx;
    margin: 0 auto;
}

.maskLayer {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

.choose {
    width: 750rpx;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    /*background: #fff;*/
}

.choosebox {
    padding: 30rpx;
    background: #fff;
    border-radius: 8rpx;
}

.choosebox-txt {
    font-size: 28rpx;
    color: #333;
    line-height: 100%;
}

.choose-padt {
    padding-bottom: 30rpx;
}

.choosefa {
    padding-top:25rpx;
}

.choosebox-date {
    font-size: 28rpx;
    color: #333;
    line-height: 60rpx;
}

.choose-amount {
    font-size: 28rpx;
    color: #fff;
    border-radius: 4rpx;
    background: #c55c47;
    line-height: 100%;
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
}