.btn {
    width: 720rpx;
    position: absolute;
    bottom: 0;
    padding: 15rpx;
    border-top: 1rpx solid #e1e4eb;
}

.btn .button {
    background-color: #c55c47;
    color: #fff;
    font-size: 16px;
}